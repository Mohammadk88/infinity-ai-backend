  id          String   @id @default(cuid())
  userId      String
  name        String   // Ø§Ø³Ù… Ø§Ù„Ù‚Ø§Ø¹Ø¯Ø© (Ù…Ø«Ù„Ø§Ù‹: "Ù†Ø´Ø± ØªÙ„Ù‚Ø§Ø¦ÙŠ Ø¹Ù†Ø¯ ÙˆØµÙˆÙ„ ØªØ¹Ù„ÙŠÙ‚")
  trigger     String   // Ù…Ø«Ø§Ù„: "new_comment", "post_scheduled", "campaign_created"
  condition   Json     // Ø´Ø±ÙˆØ· Ø¥Ø¶Ø§ÙÙŠØ© (Ù…Ø«Ù„Ø§Ù‹: Ù…Ù† Ø­Ø³Ø§Ø¨ Ù…Ø¹ÙŠÙ†ØŒ Ù…Ù† ØµÙØ­Ø© Ù…Ø¹ÙŠÙ†Ø©...)
  action      Json     // Ø§Ù„Ø¥Ø¬Ø±Ø§Ø¡ Ø§Ù„Ø°ÙŠ Ø³ÙŠØªÙ… (Ù†Ø´Ø±ØŒ ØªÙˆÙ„ÙŠØ¯ Ø±Ø¯ØŒ Ø¥Ø±Ø³Ø§Ù„ Ø¨Ø±ÙŠØ¯...)
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

model Invoice {
  id             String   @id @default(cuid())
  userId         String
  subscriptionId String?
  amount         Float
  currency       String   @default("USD")
  status         String   @default("unpaid") // "unpaid" | "paid" | "failed"
  issuedAt       DateTime @default(now())
  paidAt         DateTime?

  user           User     @relation(fields: [userId], references: [id])
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])
}

