# Infinity AI System - Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/infinitydb?schema=public"

# Application Configuration
NODE_ENV="development"
PORT=3001
APP_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here" # Replace with a secure secret
JWT_EXPIRATION="7d"
JWT_REFRESH_SECRET="your-refresh-secret-here"
JWT_REFRESH_EXPIRES_IN="30d"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@infinityai.com"

# AI Providers Configuration
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# Social Media API Keys
FACEBOOK_APP_ID="your_facebook_app_id" # Replace with your Facebook App ID
FACEBOOK_APP_SECRET="your_facebook_app_secret" # Replace with your Facebook App Secret

GOOGLE_CLIENT_ID="your_google_client_id" # Replace with your Google Client ID
GOOGLE_CLIENT_SECRET="your_google_client_secret" # Replace with your Google Client Secret

TWITTER_API_KEY="your_twitter_api_key" # Replace with your Twitter API Key
TWITTER_API_SECRET_KEY="your_twitter_api_secret_key" # Replace with your Twitter API Secret Key
TWITTER_BEARER_TOKEN="your_twitter_bearer_token" # Replace with your Twitter Bearer Token
TWITTER_ACCESS_TOKEN="your_twitter_access_token" # Replace with your Twitter Access Token

LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Payment Configuration (Paddle)
PADDLE_VENDOR_ID="your-paddle-vendor-id"
PADDLE_API_KEY="your-paddle-api-key"
PADDLE_PUBLIC_KEY="your-paddle-public-key"
PADDLE_WEBHOOK_SECRET="your-paddle-webhook-secret"

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_PATH="./uploads"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"

# Security Configuration
BCRYPT_ROUNDS=12
CSRF_SECRET="your-csrf-secret"
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_SOCIAL_MEDIA_POSTING=true

# Default System Settings
DEFAULT_LANGUAGE="en"
DEFAULT_TIMEZONE="UTC"
DEFAULT_CURRENCY="USD"


